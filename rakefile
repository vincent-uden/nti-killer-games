require 'bundler'
Bundler.require

#rake run
task :run do
  sh 'bundle exec rerun --ignore "*.{slim,js,css,scss}" --no-notify "rackup --host 0.0.0.0 -p 4567"'
end

task :debug do
    sh 'rackup'
end

task :test do
  sh 'rspec --format documentation'
end

begin
  require 'rspec/core/rake_task'

  RSpec::Core::RakeTask.new :test do |t|
    t.pattern = ['spec/*_spec.rb']
  end

rescue LoadError

end
